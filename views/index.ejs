<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data JBZ</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h2><%= title %></h2>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Nama Anggota</th>
                <th scope="col">Jabatan</th>
                <th scope="col">Alamat</th>
                <th scope="col">Angkatan</th>
                <th scope="col">Button</th>
              </tr>
            </thead>
            <tbody>
            <% for (let user of users) { %>
                <tr>
                    <td scope="row"> <%= user.ID %> </td>
                    <td scope="row"> <%= user.Nama_Anggota %> </td>
                    <td scope="row"> <%= user.Jabatan %> </td>
                    <td scope="row"> <%= user.Alamat %> </td>
                    <td scope="row"> <%= user.Angkatan %> </td>
                    <td scope="row">
                    <form action="/del" method="post">
                        <input type="button" class="btn btn-danger" value="Delete" name="del">
                    </form>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <form action="/tambah" method="post">
            <h3>Tambah Anggota Baru</h3>
            <div class="mb-3">
              <label for="nama" class="form-label">Nama Lengkap</label> 
              <input type="text" name="Nama" class="form-control">
            </div>
            <div class="mb-3">
              <label for="jabatan" class="form-label">Jabatan</label>
              <input type="text" name="Jabatan" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="alamat" class="form-label">Alamat</label>
                <input type="text" name="Alamat" class="form-control" >
            </div>
            <div class="mb-3">
                <label for="nama" class="form-label">Angkatan</label>
                <input type="text" name="Angkatan" class="form-control">
            </div>
            <input type="submit" class="btn btn-primary" value="Tambahkan"> 
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>